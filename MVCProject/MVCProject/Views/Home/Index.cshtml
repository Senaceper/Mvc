@model IEnumerable<denemee.Models.Urunler>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .mySlides {
            display: none;
        }
    </style>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        section .urunler
{
	width: 250px;
	margin-left:17px;
	margin-top:25px;
	height: 340px;
	float: left;
	text-align: center;
	transition: 500ms;
}

section .urunler img
{
	height: 250px;
	max-width: 100%;
	text-align: center;
	margin:0 auto;

}
section .urunler span
{
	font-weight: bold;
	font-family: cursive;
	font-size: 16px;
	
}
section .urunler .tutar
{
	color:#FF7F6C;
	font-size: 18px;
}

section .sepeteekle
{
	 background-color: #FF7F6C; 
	 height: 30px; 
	 -moz-border-radius:75px; 
	 -webkit-border-radius: 75px; 
	 width: 30px; 
	 font-size: 20px;
	 color:white;
	 float: right;
	 margin-right: 15px;
	 transition: 500ms;
}

section .sepeteekle span
{
	display: none;
	transition: 300ms;
	font-family: arial;
	padding:0px;
	margin:0px;
	padding-top:5px; 
	text-align: center;	
}

section .sepeteekle:hover
{
	width: 150px;
}

section .sepeteekle .icon
{
	display:block;
}

section .sepeteekle:hover .icon
{
	display:none;
}

section .sepeteekle:hover span
{
	display:block;
}


section .urunler:hover 
{
	box-shadow: 0px 0px 37px -1px rgba(0,0,0,0.75);
	
}

section h2
{
	color:#353526;
	font-family:Myriad Pro;
	text-shadow: 1px 1px 1px #FFBD2E;
	text-align: center;

}
    </style>
</head>

<body>
    <div class="w3-container">

    </div>

    <div class="w3-content w3-section" style="max-width:500px">

        <img class="mySlides" src="~/resimler/banner-1.jpg" />
        <img class="mySlides" src="~/resimler/banner-2.jpg" />
        <img class="mySlides" src="~/resimler/banner-3.jpg" />
    </div>


    <script>
        var myIndex = 0;
        carousel();

        function carousel() {
            var i;
            var x = document.getElementsByClassName("mySlides");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            myIndex++;
            if (myIndex > x.length) { myIndex = 1 }
            x[myIndex - 1].style.display = "block";
            setTimeout(carousel, 2000); // Change image every 2 seconds
        }
    </script>

    <hr />


    <section>
        <h2><img src="images/down.png">&nbsp;&nbsp;Öne Çıkan Ürünler&nbsp;&nbsp;<img src="images/down.png"></h2>

                    @foreach (var item in Model)
                    {
                    <div class="urunler">
                        <img src="~/resimler/@item.UrunResmi">
                    <br>
                     <span>@item.UrunName</span><br>
                      <span class="tutar">@item.UrunFiyat TL</span>
                     <br />
                        <a href=@Url.Action("SepetEkle","Urunler", new { id = item.UrunID })>
                            <div style=" " class=" sepeteekle">
                                <span>Sepete Ekle</span><span class="icon"> <img src="~/resimler/sepet.png" style="width:60% ; height:100% " /></span>
                            </div>
                        </a>
                        <a href=@Url.Action("Detay", "Urunler", new { id = item.UrunID })>
                            <div style="" class=" sepeteekle">
                                <span>Incele</span><span class="icon"> <img src="~/resimler/incele.png" style="width:50% ; height:100% " /></span>
                            </div>
                        </a>
                      </div>
                }
       
    </section>
    

</body>
</html>

